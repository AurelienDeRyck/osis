<openerp>
  <data>
    <report file="osis_louvain.report_student_notes"
            id="report_student_notes_pdf"
            model="osis.student_notes_display"
            name="osis_louvain.report_student_notes"
            report_type="qweb-pdf"
            string="Student notes report (pdf)"/>

    <template id="report_student_notes">
      <t t-call="report.html_container">

        <!-- <t t-call="report.external_layout"> --><!--  ATTENTION DrÃ´le de comportement quand je laisse ceci -->
        <div class="page">
          <h1>Student notes</h1>
          <table class="table">
            <thead>
              <tr>
                <th>Learning unit</th>
                <th>Year</th>
                <th>Session name</th>
                <th>Student</th>
                <th>Score</th>
              </tr>
            </thead>
            <t t-as="doc" t-foreach="docs">
              <tr>
                <td><span t-field="doc.title_learning_unit"/></td>
                <td><span t-field="doc.year"/></td>
                <td><span t-field="doc.session_number"/></td>
                <td><span t-field="doc.student_name"/></td>
                <td><span t-field="doc.score"/></td>
              </tr>
            </t>
          </table>
        </div>
        <!-- </t> -->

      </t>
    </template>

  </data>
</openerp>
