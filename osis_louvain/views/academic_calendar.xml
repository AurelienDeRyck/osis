<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="academic_calendar_tree_view" model="ir.ui.view">
      <field name="name">academic_calendar.tree.view</field>
      <field name="model">osis.academic_calendar</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="event"/>
          <field name="start_date"/>
          <field name="end_date"/>
          <field name="description"/>
          <field name="academic_year_id"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="academic_calendar_simple_form" model="ir.ui.view">
      <field name="name">osis.view.academic_calendar.form</field>
      <field name="model">osis.academic_calendar</field>
      <field name="arch" type="xml">
        <form string="Academic Calendar Form">
          <group >
            <field name="event"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="academic_year_id"/>
          </group>
          <group>
              <field name="description"/>
          </group>

        </form>
      </field>
    </record>

  </data>
</openerp>
