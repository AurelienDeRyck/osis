<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Search -->
      <record model="ir.ui.view" id="session_exam_view_search">
          <field name="name">session_exam.search</field>
          <field name="model">osis.session_exam</field>
          <field name="arch" type="xml">
              <search>
                <group string="Group By">
                      <filter name="group_by_session" string="Exam" context="{'group_by': 'number_session'}"/>
                </group>
              </search>
          </field>
      </record>

    <!-- Tree -->
    <record id="session_exam_tree_view" model="ir.ui.view">
      <field name="name">session_exam.tree.view</field>
      <field name="model">osis.session_exam</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="learning_unit_year_id" string="Learning unit year"/>
          <field name="encoding_status" string="Encoding Status"/>
          <field name="number_session" string="Session"/>
        </tree>
      </field>
    </record>
    <!-- Form -->
    <record id="session_exam_form" model="ir.ui.view">
      <field name="name">osis.view.session.exam.form</field>
      <field name="model">osis.session_exam</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <form string="Session Exam Form">
          <group col="4">
            <field name="learning_unit_year_id" string="Learning unit year"/>
            <field name="encoding_status"/>
            <field name="number_session" string="Session"/>
            <field name="comment"/>
          </group>
        </form>
      </field>
    </record>
    <!-- form 1st encoding -->
    <record model="ir.ui.view" id="resultswizard_form_view">
        <field name="name">osis.wizard.notes.form</field>
        <field name="model">osis.session_exam</field>
        <field name="arch" type="xml">
            <form string="Encode notes">
              <header>
                <separator string="Encode draft notes/justification"/>
                <group>
                  <field name="learning_unit_acronym" readonly="1" string="Learning unit"/>
                  <field name="comment" string="Comment"/>
                  <button name="save_comment" type="object" string="Save comment" />

                </group>
              </header>

                <group col="1">
                    <field name="notes_encoding_filter_ids" nolabel="1">
                        <tree editable="bottom" create="false" delete="false" >
                            <field name="student_name" readonly="1"/>
                            <field name="score_1" string="Score" />
                            <field name="justification_1" string="Justification"/>
                            <field name="learning_unit_credits" invisible="1"/>

                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="validate_results" type="object" string="Submit" class="oe_highlight"/>
                    or
                    <button name="double_encoding" type="object" string="Double encoding" />
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- form for double encoding-->
      <record model="ir.ui.view" id="double_resultswizard_form_view">
          <field name="name">osis.wizard.double.notes.form</field>
          <field name="model">osis.session_exam</field>
          <field name="arch" type="xml">
              <form string="Double Encode notes">
                <header>
                  <separator string="Reencode notes/justification"/>
                  <group>
                    <field name="learning_unit_acronym" readonly="1" string="Learning unit"/>
                  </group>
                </header>

                  <group col="1">
                      <field name="notes_encoding_filter_ids" nolabel="1">
                          <tree editable="bottom" create="false" delete="false" >
                              <field name="student_name" readonly="1"/>
                              <field name="score_2" string="Score reencoded" />
                              <field name="justification_2" string="Justification reencoded"/>
                          </tree>
                      </field>
                  </group>
                  <footer>
                      <button name="validate_results" type="object"
                              string="Validate" class="oe_highlight"/>
                              or
                              <button name="compare_session_notes" type="object" string="Compare" />
                              or
                              <button special="cancel" string="Cancel"/>
                  </footer>
              </form>
          </field>
      </record>
      <!-- form to compare notes -->
        <record model="ir.ui.view" id="compare_resultswizard_form_view">
            <field name="name">osis.wizard.compare.notes.form</field>
            <field name="model">osis.session_exam</field>
            <field name="arch" type="xml">
                <form string="Compare notes">
                  <header>
                    <separator string="Compare notes/justification"/>
                  <group>
                    <field name="learning_unit_acronym" readonly="1" string="Learning unit"/>
                  </group>

                </header>
                    <group col="1">
                        <field name="notes_encoding_filter_ids" nolabel="1">
                            <tree editable="bottom" create="false" delete="false" colors="red:notes_status=='DIFFERENT'" >
                                <field name="student_name" readonly="1"/>
                                <field name="score_1" readonly="1" />
                                <field name="justification_1" readonly="1"/>
                                <field name="score_2" readonly="1"/>
                                <field name="justification_2" readonly="1"/>
                                <field name="score_final" readonly="1" />
                                <field name="justification_final" readonly="1"/>
                                <field name="notes_status" invisible="1" />
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="validate_results" type="object"
                                string="Validate" class="oe_highlight"/>

                                or
                                <button name="encode_final_notes" type="object"
                                        string="Encode final notes" />

                                or
                                <button name="submit_results" type="object"
                                        string="Submit notes" />
                                or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- form to encode final notes-->
          <record model="ir.ui.view" id="encode_final_notes_form_view">
              <field name="name">osis.wizard.encode.final.notes.form</field>
              <field name="model">osis.session_exam</field>
              <field name="arch" type="xml">
                  <form string="Encode final notes">
                    <header>
                      <separator string="Encode final notes/justifications"/>
                    <group>
                      <field name="learning_unit_acronym" readonly="1" string="Learning unit"/>
                    </group>

                  </header>
                      <group col="1">
                          <field name="notes_encoding_compare_filter_ids" nolabel="1"  >
                              <tree editable="bottom" create="false" delete="false" >
                                  <field name="student_name" readonly="1"/>
                                  <field name="score_1" readonly="1"/>
                                  <field name="justification_1" readonly="1"/>
                                  <field name="score_2"  readonly="1"/>
                                  <field name="justification_2" readonly="1"/>
                                  <field name="score_final"  />
                                  <field name="justification_final"/>
                              </tree>
                          </field>
                      </group>
                      <footer>
                          <button name="validate_results" type="object"
                                  string="Validate" class="oe_highlight"/>

                                  <button name="submit_final_notes" type="object"
                                          string="Submit" />
                          <button special="cancel" string="Cancel"/>
                      </footer>
                  </form>
              </field>
          </record>

  </data>
</openerp>
