<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Search -->
      <record model="ir.ui.view" id="activityinfo_search_view">
          <field name="name">earning_unit_status.search</field>
          <field name="model">osis.status</field>
          <field name="arch" type="xml">
              <search>
                  <field name="acronym"/>
                  <field name="title"/>
                  <field name="year"/>
                  <field name="status"/>
                  <field name="session_name"/>
                  <group string="Group By">
                        <filter name="group_by_year" string="Year" context="{'group_by': 'year'}"/>
                        <filter name="group_by_status" string="Status" context="{'group_by': 'status'}"/>
                        <filter name="group_by_session_name" string="Session name" context="{'group_by': 'session_name'}"/>
                  </group>
                  <filter name="Complete" domain="[('status', '=', 'COMPLETE')]" string="Status complete"/>
                  <filter name="Partial" domain="[('status', '=', 'PARTIAL')]" string="Status partial"/>
                  <filter name="Missing" domain="[('status', '=', 'MISSING')]" string="Status missing"/>
              </search>
          </field>
      </record>
    <!-- Tree -->
    <record id="learning_unit_status_tree_view" model="ir.ui.view">
      <field name="name">learning_unit_status.tree.view</field>
      <field name="model">osis.status</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree colors="green:status=='COMPLETE';red:status=='MISSING';orange:status=='PARTIAL'">
          <button name="wizard_encode_results"
            type="object"
                                          string="Encode results" />
          <field name="acronym"/>
          <field name="title"/>
          <field name="year"/>
          <field name="status"/>
          <field name="session_name"/>
        </tree>
      </field>
    </record>
    <!-- Form -->
    <record id="learning_unit_status_form" model="ir.ui.view">
      <field name="name">osis.view.learning_unit_status.form</field>
      <field name="model">osis.status</field>

      <field name="arch" type="xml">
        <form string="Learning Unit Status Form">
          <group col="4">
            <field name="acronym"/>
            <field name="title"/>
            <field name="year"/>
          </group>
          <group col="4">
            <field name="status"/>
            <field name="session_name"/>
          </group>
        </form>
      </field>
    </record>
  </data>
</openerp>
