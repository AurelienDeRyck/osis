<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="offer_enrollment_tree_view" model="ir.ui.view">
      <field name="name">offer_enrollment.tree.view</field>
      <field name="model">osis.offer_enrollment</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="offer_year_id"/>
          <field name="student_id"/>
          <field name="date_enrollment"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="offer_enrollment_form" model="ir.ui.view">
      <field name="name">osis.view.offer_enrollment.form</field>
      <field name="model">osis.offer_enrollment</field>

      <field name="arch" type="xml">
        <form string="Offer Enrollment Form">
          <group col="4">
            <field name="offer_year_id"/>
            <field name="student_id"/>
            <field name="date_enrollment"/>
          </group>
        </form>
      </field>
    </record>

  </data>
</openerp>
