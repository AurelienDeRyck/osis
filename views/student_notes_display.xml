<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="student_notes_display_tree_view" model="ir.ui.view">
      <field name="name">student_notes_display.tree.view</field>
      <field name="model">osis.student_notes_display</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree create="false" delete="false" editable="false">
          <field name="title_learning_unit" string="Learning unit" attrs="{'readonly':True}"/>
          <field name="year" attrs="{'readonly':True}"/>
          <field name="session_name" string="Session" attrs="{'readonly':True}"/>
          <field name="student_name" string="Student" attrs="{'readonly':True}"/>
          <field name="score" attrs="{'readonly':True}"/>
        </tree>
      </field>
    </record>
    <!-- ATTENTION Actuellement seul 2iÃ¨me bouton apparait-->
    <!-- 1ier Bouton -->
    <record id="submitting_notes_more_item_action" model="ir.actions.server">
      <field name="name">Submitting notes</field>
      <field name="model_id" ref="model_osis_student_notes_display"/>
      <field name="code">action = self.submit_results(cr, uid, context.get('active_ids', []), context=context)</field>
    </record>

    <record id="test_more_item" model="ir.values">
        <field name="key2">client_action_multi</field>
        <field name="model">osis.student_notes_display</field>
        <field name="name">Submitting notes</field>
        <field eval="'ir.actions.server,%d'%submitting_notes_more_item_action" name="value"/>
    </record>
    <!-- 2ieme Bouton -->
    <record id="encoding_notes_more_item_action" model="ir.actions.server">
          <field name="name">Encoding notes</field>
          <field name="model_id" ref="model_osis_student_notes_display"/>

          <field name="code">action = self.wizard_encode_results(cr, uid, context.get('active_ids', []), context=context)</field>
        </record>

        <record id="test_more_item" model="ir.values">
            <field name="key2">client_action_multi</field>
            <field name="model">osis.student_notes_display</field>
            <field name="name">Encoding notes</field>
            <field eval="'ir.actions.server,%d'%encoding_notes_more_item_action" name="value"/>

        </record>



  </data>
</openerp>
