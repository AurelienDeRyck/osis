<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="student_tree_view" model="ir.ui.view">
      <field name="name">student.tree.view</field>
      <field name="model">osis.student</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="person_id"/>
          <field name="registration_number"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="student_simple_form" model="ir.ui.view">
      <field name="name">osis.view.studentform</field>
      <field name="model">osis.student</field>

      <field name="arch" type="xml">
        <form string="Student simple Form">
          <group col="4">
            <field name="registration_number"/>
            <field name="person_id"/>
          </group>
        </form>
      </field>
    </record>

  </data>
</openerp>
