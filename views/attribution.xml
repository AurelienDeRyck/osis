<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="attribution_tree_view" model="ir.ui.view">
      <field name="name">attribution.tree.view</field>
      <field name="model">osis.attribution</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="learning_unit_id" string="Learning unit title"/>
          <field name="tutor_id" string="Name"/>
          <field name="function" string="Function"/>
          <field name="start_date" string="Start year"/>
          <field name="end_date" string="End year"/>
        </tree>
      </field>
    </record>
    <record id="attribution_by_tutor" model="ir.ui.view">
      <field name="name">attribution.by.tutor</field>
      <field name="model">osis.attribution</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="learning_unit_id" string="Learning unit title"/>
          <field name="tutor_id"/>
          <field name="start_date"/>
          <field name="end_date"/>
          <field name="function"/>
        </tree>
      </field>
    </record>
    <!-- Form -->
    <record id="attribution_simple_form" model="ir.ui.view">
      <field name="name">osis.view.attribution.form</field>
      <field name="model">osis.attribution</field>

      <field name="arch" type="xml">
        <form string="Attribution simple Form">
          <group col="4">
            <field name="learning_unit_id"/>
            <field name="tutor_id"/>
            <field name="function"/>
          </group>
          <group col="4">
            <field name="start_date"/>
            <field name="end_date"/>
          </group>
        </form>
      </field>
    </record>
  </data>
</openerp>
