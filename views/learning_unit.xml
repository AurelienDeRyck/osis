<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="learning_unit_tree_view" model="ir.ui.view">
      <field name="name">learning_unit.tree.view</field>
      <field name="model">osis.learning_unit</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="acronym"/>
          <field name="title"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="learning_unit_simple_form" model="ir.ui.view">
      <field name="name">osis.view.learning_unit.form</field>
      <field name="model">osis.learning_unit</field>

      <field name="arch" type="xml">
        <form string="Learning Unit Form">
          <group col="4">
            <field name="acronym"/>
            <field name="title"/>
          </group>
        </form>
      </field>
    </record>

  </data>
</openerp>
