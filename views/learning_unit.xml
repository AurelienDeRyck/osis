<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="learning_unit_tree_view" model="ir.ui.view">
      <field name="name">learning_unit.tree.view</field>
      <field name="model">osis.learning_unit</field>
      <field eval="8" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="title"/>
        </tree>
      </field>

    </record>
    <record id="learning_unit_by_tutor" model="ir.ui.view">
      <field name="name">learning_unit_by_tutor</field>
      <field name="model">osis.learning_unit</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="title"/>
          <field name="learning_unit_year_id"/>
          <field name="learning_unit_year_id"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="learning_unit_simple_form" model="ir.ui.view">
      <field name="name">osis.view.learning_unit.form</field>
      <field name="model">osis.learning_unit</field>

      <field name="arch" type="xml">
        <form string="Learning Unit Form">
          <group col="4">
            <field name="title"/>
          </group>
            <group col="4">
            <field name="attribution_id"/>
          </group>
          <group>
            <field name="learning_unit_year_id"/>
          </group>


        </form>
      </field>
    </record>

  </data>
</openerp>
