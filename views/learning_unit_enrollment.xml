<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="learning_unit_enrollment_tree_view" model="ir.ui.view">
      <field name="name">learning_unit_enrollment.tree.view</field>
      <field name="model">osis.learning_unit_enrollment</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="learning_unit_year_id"/>
          <field name="student_id"/>
          <field name="date_enrollment"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="learning_unit_enrollment_form" model="ir.ui.view">
      <field name="name">osis.view.learning_unit_enrollment.form</field>
      <field name="model">osis.learning_unit_enrollment</field>

      <field name="arch" type="xml">
        <form string="Learning Unit Enrollment Form">
          <group col="4">
            <field name="learning_unit_year_id"/>
            <field name="student_id"/>
            <field name="date_enrollment"/>
          </group>
          <!-- <group col="4">
            <field name="exam_enrollment_ids"/>
          </group> -->
        </form>
      </field>
    </record>

  </data>
</openerp>
