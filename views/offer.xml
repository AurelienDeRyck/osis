<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
      <!-- Tree -->
      <record model="ir.ui.view" id="offer_tree_view">
          <field name="name">offer.tree</field>
          <field name="model">osis.offer</field>
          <field eval="16" name="priority"/>
          <field name="arch" type="xml">
              <tree>
                  <field name="acronym" string="Acronym"/>
                  <field name="title" string="Title"/>
              </tree>
          </field>
      </record>
      <!-- Form -->
      <record model="ir.ui.view" id="osis_offer_form">
          <field name="name">osis.view.offerform</field>
          <field name="model">osis.offer</field>
          <field name="arch" type="xml">
            <form string="Offer Form">
              <sheet>
                <group col="4">
                  <field name="acronym"/>
                  <field name="title"/>
                </group>
              </sheet>
            </form>
          </field>
      </record>

    </data>
</openerp>
