<openerp>
  <data>
    <report
      id="report_scores_sheet_pdf"
      model="osis.session_exam"
      string="Scores sheet pdf"
      name="osis-louvain.report_scores_sheet"
      file="osis-louvain.report_scores_sheet"
      report_type="qweb-pdf"/>

      <report
        id="report_scores_sheet_html"
        model="osis.session_exam"
        string="Scores sheet html"
        name="osis-louvain.report_scores_sheet"
        file="osis-louvain.report_scores_sheet"
        report_type="qweb-html" />

      <template id="report_scores_sheet">
        <t t-call="report.html_container">
          <div class="page">
            <t t-foreach="docs" t-as="doc">
              <div id="bloc_entete" style="margin-left: 13.5cm">
                <div class="row">
                  <span>Academic year </span>
                  <span t-field="doc.learning_unit_year_id.academic_year_id"></span>
                </div>
                <div class="row">
                  <span>Session : </span>
                  <span t-field="doc.session_name"></span>
                </div>
                <div class="row mt16">
                  <span><b>Scores sheet</b></span>
                </div>
              </div><!-- bloc_entete -->
              <div class="row mt32 mb16">
                <b><span t-field="doc.learning_unit_year_id.acronym"/> - <span t-field="doc.learning_unit_year_id.title"/></b>
              </div>
              <div id="bloc_signature">
                <div class="row mb8">Fait à ........................................</div>
                <div class="row mb8">le ........../........../..........</div>
                <div class="row">Signature</div>
              </div>
              <div class="row mt48" id="tableau">
                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Offer year</th>
                      <th>Name and firstname</th>
                      <th>Registration number</th>
                      <th>Score</th>
                      <th>Justification</th>
                      <th>N° ordre</th>
                    </tr>
                  </thead>
                  <t t-foreach="doc.exam_enrollment_ids" t-as="exam">
                    <t t-set="offer_enrollment" t-value="exam.learning_unit_enrollment_id.offer_enrollment_id"/>
                    <t t-set="student" t-value="offer_enrollment.student_id"/>
                    <tr>
                      <td><span t-field="offer_enrollment.offer_year_id.offer_id.acronym"/></td>
                      <td><span t-field="student.person_id.name"/></td>
                      <td><span t-field="student.registration_number"/></td>
                      <td></td>
                      <td></td>
                      <td><span t-esc="exam_index + 1"/></td>
                    </tr>
                  </t>
                </table>
              </div> <!-- tableau -->
            </t>
          </div> <!-- page -->
        </t>
      </template>
    </data>
  </openerp>
